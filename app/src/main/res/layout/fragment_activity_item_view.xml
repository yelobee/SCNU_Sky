<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="80dp"
    android:background="@android:color/white">
    <TextView
        android:id="@+id/fragment_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="文字"/>
    <TextView
        android:id="@+id/fragment_activity_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_activity_title"
        android:layout_marginLeft="5dp"
        android:lines="2"
        android:text="abdsagfahshgfjasfgajsdhfgdsjahfgdsjhf"/>
    <TextView
        android:id="@+id/fragment_activity_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:text="2011-11-11发布"/>
</RelativeLayout>